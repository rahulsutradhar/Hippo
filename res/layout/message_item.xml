<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inbox_horizontal_mergin"
        android:layout_marginRight="@dimen/inbox_horizontal_mergin"
        android:layout_marginTop="@dimen/inbox_vertical_mergin"
        android:layout_marginBottom="@dimen/inbox_vertical_mergin"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/messageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/message_vertical_padding"
            android:src="@drawable/ic_action_ic_action_picture" 
            android:contentDescription="@string/content_desc_message_icon"/>

        <TextView
            android:id="@+id/senderLebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/messageIcon"
            android:layout_alignParentLeft="true"
            android:text="Test name"
            android:paddingTop="@dimen/message_vertical_padding"
            android:paddingLeft="@dimen/message_vertical_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/recipient_text_size" />
        
        <TextView 
            android:id="@+id/timeLebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/messageIcon"
            android:layout_below="@id/senderLebel"
            android:paddingLeft="@dimen/message_vertical_padding"
            android:paddingBottom="@dimen/message_vertical_padding"
            android:textSize="12sp"
            android:text="time"
            android:textColor="@color/light_grey"
            
            />
    </RelativeLayout>

</LinearLayout>